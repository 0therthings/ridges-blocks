{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "brushwood/grid",
	"version": "0.1.0",
	"title": "Simple Grid",
	"category": "brushwood",
	"icon": "screenoptions",
	"description": "The simple grid block allows you to space grid children evenly.",
	"example": {},
	"supports": {
		"html": false
	},
	"textdomain": "grid",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"viewScript": "file:./view.js",
	"attributes": {
		"columns": {
			"type": "integer",
			"default": 1
		},
		"mobileColumns": {
			"type": "integer",
			"default": 1
		},
		"spacing": {
			"type": "integer",
			"default": 1
		}
	}
}